<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <attr name="isFull" format="boolean" />
        <attr name="imgRadius" format="dimension"/>
        <attr name="isCycle" format="boolean"/>
        <attr name="isWheel" format="boolean"/>
        <attr name="delay" format="integer"/>
    </declare-styleable>

    <declare-styleable name="InfoView">
        <attr name="showBottomDivider" format="boolean"/>
        <attr name="showLeftImage" format="boolean"/>
        <attr name="showSubText" format="boolean"/>
        <attr name="LeftImageSize" format="enum">
            <enum name="normal" value="0"/>
            <enum name="large" value="1"/>
        </attr>
        <attr name="mainText" format="string"/>
        <attr name="subText" format="string"/>
        <attr name="rightMode" format="enum">
            <enum name="normal" value="0"/>
            <enum name="arrow" value="1"/>
            <enum name="toggle" value="2"/>
            <enum name="customIcon" value="3"/>
            <enum name="text" value="4"/>
        </attr>
        <attr name="rightIcon" format="reference"/>
        <attr name="leftIcon" format="reference"/>
        <attr name="rightMargin" format="dimension"/>
        <attr name="rightText" format="string"/>
    </declare-styleable>
</resources>