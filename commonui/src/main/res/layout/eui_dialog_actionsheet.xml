<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_6B7884"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="提示文本是可配置模块，如没有就不展示换行说明文字说明文字说明文字说明文字说明文字" />

    <View
        android:id="@+id/divider_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f3f4f8"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_action1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="选项一"
        android:textColor="@color/color_2A333A"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider_title"
        />

    <View
        android:id="@+id/divider_action1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f3f4f8"
        app:layout_constraintTop_toBottomOf="@id/tv_action1" />

    <TextView
        android:id="@+id/tv_action2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="选项二"
        android:textColor="@color/color_2A333A"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider_action1"
        />

    <View
        android:id="@+id/divider_action2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f3f4f8"
        app:layout_constraintTop_toBottomOf="@id/tv_action2" />

    <TextView
        android:id="@+id/tv_warn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="警示"
        android:textColor="@color/color_FA4A23"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider_action2"
        />

    <View
        android:id="@+id/divider_warn"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_f3f4f8"
        app:layout_constraintTop_toBottomOf="@id/tv_warn" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_2A333A"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider_warn" />
</android.support.constraint.ConstraintLayout>